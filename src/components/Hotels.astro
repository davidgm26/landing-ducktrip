    <div class="swiper-pagination"></div>
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<script type="module">
  // @ts-ignore
  import Swiper from "https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.mjs";
  // @ts-ignore
  import Navigation from "https://cdn.jsdelivr.net/npm/swiper@10.3.1/modules/navigation.mjs";
  // @ts-ignore
  import Pagination from "https://cdn.jsdelivr.net/npm/swiper@10.3.1/modules/pagination.mjs";
  const mySwiper = new Swiper(".swiper", {
    modules: [Navigation, Pagination],
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    pagination: {
      el: ".swiper-pagination",
      dynamicBullets: true,
    },
  slidesPerView: 1,
  spaceBetween: 10,
  breakpoints: {
    480: {
      slidesPerView: 2,
      spaceBetween: 20
    },
    640: {
      slidesPerView: 4,
      spaceBetween: 20
    }
  },
    initialSlide: 0,
    direction: "horizontal",
    loop: true,
    effect: "slide",
    grabCursor: true,
  });
</script>
