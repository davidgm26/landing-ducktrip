            <span class="location-text5">Rambagh</span>
          </div>
        </div>
      </div>
      <!--Location 7-->
      <div class="swiper-slide section5-card">
        <div class="card-score5">
          <i class="score-icon5"></i>
          <span class="score-text5">4.7</span>
        </div>
        <img class="card-image" src="images/section5_w_barcelona.jpg" alt="BW Barcelona"/>
        <div class="card-info5">
          <h4 class="info-title5">Barcelona</h4>
          <div class="info-location5">
            <i class="location-icon5"></i>
            <span class="location-text5">BW Barcelona</span>
          </div>
        </div>
      </div>
      <!--Location 8-->
      <div class="swiper-slide section5-card">
        <div class="card-score5">
          <i class="score-icon5"></i>
          <span class="score-text5">4.7</span>
