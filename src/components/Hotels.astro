        <div class="card-info5">
          <h4 class="info-title5">Francia</h4>
          <div class="info-location5">
            <i class="location-icon5"></i>
            <span class="location-text5">Negresco</span>
          </div>
        </div>
      </div>
      <!--Location 6-->
      <div class="swiper-slide section5-card">
        <div class="card-score5">
          <i class="score-icon5"></i>
